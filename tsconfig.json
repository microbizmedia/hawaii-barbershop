{
  "compilerOptions": {
    "target": "es5", // You can also set this to 'esnext'
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "module": "esnext",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
//   "include": [
//     "**/*.ts",
//     "**/*.tsx",
//     "next-env.d.ts",
//     ".next/types/**/*.ts"
// , "app/layout.tsx", "app/page.tsx", "app/sections/directions.jsx", "app/sections/about.jsx", "app/sections/hero.tsx", "app/sections/reviews.jsx", "app/sections/priceMenu.jsx", "app/sections/instagram.jsx", "next.config.js"  ],
"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
"exclude": [
    "node_modules"
  ]
}
